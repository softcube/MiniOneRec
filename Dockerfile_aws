# syntax=docker/dockerfile:1.4
# Keep BASE_IMAGE aligned with `RQ-VAE-Recommender` (CUDA devel on Ubuntu).
ARG UBUNTU_VERSION=20.04
ARG CUDA_VERSION=12.0.0
ARG BASE_IMAGE=nvidia/cuda:${CUDA_VERSION}-cudnn8-devel-ubuntu${UBUNTU_VERSION}
FROM ${BASE_IMAGE}

SHELL ["/bin/bash", "-lc"]

ENV DEBIAN_FRONTEND=noninteractive \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

RUN apt-get update && apt-get install -y --no-install-recommends \
      ca-certificates \
      curl \
      git \
      software-properties-common \
      build-essential \
    && add-apt-repository ppa:deadsnakes/ppa \
    && apt-get update \
    && apt-get install -y --no-install-recommends \
      python3.9 \
      python3.9-dev \
      python3.9-distutils \
    && ln -sf /usr/bin/python3.9 /usr/bin/python3 \
    && ln -sf /usr/bin/python3 /usr/bin/python \
    && curl -sS https://bootstrap.pypa.io/get-pip.py | python3.9 \
    && ln -sf /usr/local/bin/pip /usr/bin/pip \
    && rm -rf /var/lib/apt/lists/*

# By default, install all dependencies (`pip install -r requirements.txt`).
# Set INSTALL_FULL_REQUIREMENTS=0 to install only the minimal training set.
ARG INSTALL_FULL_REQUIREMENTS=1
ARG TORCH_INDEX_URL=https://download.pytorch.org/whl/cu121
ARG TORCH_VERSION=2.6.0
COPY requirements.txt /tmp/requirements.txt
RUN python -m pip install --upgrade pip && \
    if [[ "${INSTALL_FULL_REQUIREMENTS}" == "1" ]]; then \
      python -m pip install --no-cache-dir --extra-index-url "${TORCH_INDEX_URL}" -r /tmp/requirements.txt ; \
    else \
      python -m pip install --no-cache-dir \
        --index-url "${TORCH_INDEX_URL}" \
        "torch==${TORCH_VERSION}" \
        numpy==1.26.3 \
        tqdm==4.67.1 \
        transformers==4.57.1 ; \
    fi

WORKDIR /workspace
